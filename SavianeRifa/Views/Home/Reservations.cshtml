@model List<SavianeRifa.Models.ReservationListItem>
@{
    ViewData["Title"] = "Reservas";
    var q = ViewData["Query"] as string ?? string.Empty;
}

<div class="row">
    <div class="col-12 mb-3">
        <h3>Reservas e confirmações</h3>
        <p class="text-muted">Pesquise por nome ou e-mail (o e-mail é usado apenas para busca e não será exibido).</p>
        <form method="get" action="/reservas" class="d-flex gap-2">
            <input name="q" value="@q" class="form-control" placeholder="Nome ou e-mail" />
            <button class="btn btn-primary">Pesquisar</button>
            <a href="/reservas" class="btn btn-outline-primary">Limpar</a>
        </form>
    </div>

    <div class="col-12 reservations-list">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="reservation-card">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="mb-1">@item.Name</h5>
                            <div class="reservation-meta">@item.RegisteredAt.ToString("g") • @item.Location</div>
                        </div>
                        <div class="text-end">
                            <div>Total: <strong>@item.TotalRifas</strong></div>
                            <div>Reservadas: <strong>@item.ReservedCount</strong></div>
                            <div>Vendidas: <strong>@item.SoldCount</strong></div>
                            <div>Status: <span class="badge bg-secondary">@item.Status</span></div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted">Nenhuma reserva encontrada.</div>
        }
    </div>
</div>
